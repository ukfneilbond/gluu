<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>deployable</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/oxauth/lib</outputDirectory>
			<includes>
				<include>secureia-gluu-?.?.?.jar</include>
			</includes>
		</fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependencies</directory>
            <outputDirectory>/common/lib</outputDirectory>
            <includes>
                <include>slf4j-api-*.jar</include>
				<include>joda-time-*.jar</include>
				<include>simple-java-mail-*.jar</include>
            </includes>
        </fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/identity/lib</outputDirectory>
			<includes>
				<include>secureia-gluu-?.?.?-emailservice.jar</include>
			</includes>
		</fileSet>
        <fileSet>
          <directory>${project.basedir}/oxauth</directory>
          <outputDirectory>/oxauth</outputDirectory>
        </fileSet>
        <fileSet>
          <directory>${project.basedir}/openldap</directory>
          <outputDirectory>/openldap</outputDirectory>
        </fileSet>
	</fileSets>
</assembly>